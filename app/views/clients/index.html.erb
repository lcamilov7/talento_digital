<div class="container">
  <div class="container  row m-4 d-flex justify-content-center text-center">
    <div class="col-4 border p-4">
      <h3><%= Client.where(status: 0, user: current_user).count %>/<%= @client_0 %></h3>
      <p class="mb-0">Prospecto</p>
    </div>
    <div class="col-4 border p-4">
      <h3><%= Client.where(status: 1, user: current_user).count %>/<%= @client_1 %></h3>
      <p class="pb-0">Muy interesado</p>
    </div>
    <div class="col-4 border p-4">
      <h3><%= Client.where(status: 2, user: current_user).count %>/<%= @client_2 %></h3>
      <p class="pb-0">Cliente</p>
    </div>
  </div>
  <h4><%= current_user.name %> clients</h4>
  <div class="d-flex">
    <%= link_to "Add Client", new_client_path, class: "btn btn-secondary" %>

  </div>
</div>
<%= render "clients/table", clients: @clients %>
<%= console %>
